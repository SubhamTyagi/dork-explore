<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tyagi.shubham.customsearch.fragments.AdvanceFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_pages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/primaryTextColor"
                android:text="@string/pages"/>

            <CheckBox
                android:id="@+id/cb_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/primaryTextColor"
                android:text="@string/image"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/primaryTextColor">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/allthese"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/allofthese"
                    android:textColorHint="@color/primaryTextColor"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/primaryTextColor">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/exactthese"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/exactthesephrase"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/primaryTextColor">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/anythese"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/anyoftheseword"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/primaryTextColor">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/nonethese"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/noneofthese"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColorHint="@color/primaryTextColor">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_numberfrom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/numberfrom"
                        android:inputType="number"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColorHint="@color/primaryTextColor">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_numberto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/numberto"
                        android:inputType="number"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</ScrollView>
